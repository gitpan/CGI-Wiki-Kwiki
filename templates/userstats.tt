[% INCLUDE header.tt %]

<h1 align=center>[% site_name %] - User Stats for [% username %]</h1>

[% content %]

<h2>
  Last
  [% IF nodes.size == 1 %]
    node
  [% ELSE %]
    [% nodes.size %] nodes
  [% END %]
  edited by [% username %]
</h2>

<ul>
[% FOREACH node = nodes %]
  <li>[% node.last_modified %]
      <a href="[% node.url %]">[% node.name %]</a>
      [% IF node.comment %]
        <b>[[% node.comment %]]</b>
      [% END %]
  </li>
[% END %]
</ul>

</body>
</html>
